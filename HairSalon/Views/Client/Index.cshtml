@{
	Layout = "_Layout";
}

<h1 class="display-1 text-center">Clients</h1>

@using HairSalon.Models
@if (Model.Count == 0)
{
	<h3>No Clients Added Yet</h3>
}
else
{
	<ul class="list-group">
	@foreach (Client client in Model)
	{
		<li class="list-group-item">@client.Name</li>
	}
	</ul>
}

<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })</p>