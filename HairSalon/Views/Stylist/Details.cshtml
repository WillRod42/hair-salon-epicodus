@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h1 class="display-1 text-center">Stylist Info</h1>
<hr />
<h5>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h5>
<h5>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h5>

<h5>Clients</h5>
<ul class="list-group">
  @if (Model.Clients.Count == 0)
  {
    <li class="list-group-item">No clients added</li>
  }
  else
  {
    @foreach (Client client in Model.Clients)
    {
      <li class="list-group-item">@client.Name</li>
    }
  }
</ul>

<p>@Html.ActionLink("Add A Client", "Create", "Client", new { id = Model.StylistId }, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Back", "Index", "Stylist", null, new { @class = "btn btn-primary" })</p>