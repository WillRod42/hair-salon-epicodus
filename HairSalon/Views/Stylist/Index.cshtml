@{
	Layout = "_Layout";
}

<h1 class="display-1 text-center">Stylists</h1>

@using HairSalon.Models
@if (Model.Count == 0)
{
	<h3>No Stylists Added Yet</h3>
}
else
{
	<div class="list-group">
	@foreach (Stylist stylist in Model)
	{
		@Html.ActionLink($"{stylist.Name}", "Details", "Stylist", new { id = stylist.StylistId }, new { @class = "list-group-item list-group-item-action" })
	}
	</div>
}

<p>@Html.ActionLink("Add Stlyist", "Create", "Stylist", null, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })</p>