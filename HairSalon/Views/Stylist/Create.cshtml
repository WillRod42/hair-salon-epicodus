@{
  Layout = "_Layout";
}
<h1 class="display-1 text-center">New Stylist</h1>

@model HairSalon.Models.Stylist
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control" })
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty, new { @class="form-control" })
  <input type="submit" value="Add A New Stylist" class="btn btn-primary"/>
}

<p>@Html.ActionLink("Back", "Index", "Stylist", null, new { @class="btn btn-primary" })</p>